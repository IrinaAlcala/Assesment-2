<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    <% if (todos.length>0) { %>
      <ul>
        <% todos.forEach((todo, i) => { %>
          <li>
            <%=todo.todo%> -
            <% if (todo.done) {%>
              Done
            <% } else { %>
              Not Done
            <% } %>
            
          </li>
        <% }) %>
    </ul>
    <% } else { %>
      <h3>There are no To Dos yet!</h3>
    <% } %>
    <hr>
    <form action='/create' method='POST'>
      <input type='text' placeholder='New Todo' name='todo' required>
      <input type='submit'>
    </form>
  </body>
</html>